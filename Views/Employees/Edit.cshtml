@model StudentAndEmployeeAppsMVC.Models.ViewModel.EmployeeRoleSelections

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.employee.Id" />
            <div class="form-group">
                <label asp-for="@Model.employee.Name" class="control-label"></label>
                <input asp-for="@Model.employee.Name" class="form-control" />
                <span asp-validation-for="@Model.employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.employee.UserName" class="control-label"></label>
                <input asp-for="@Model.employee.UserName" class="form-control" />
                <span asp-validation-for="@Model.employee.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.employee.Password" class="control-label"></label>
                <input asp-for="@Model.employee.Password" class="form-control" />
                <span asp-validation-for="@Model.employee.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model=>model.employee.Roles)
            </div>
            @for(int i = 0; i < Model.roleSelections.Count; i ++)
            {
                <label asp-for="@Model.roleSelections[i].Selected">
                @Model.roleSelections[i].role.Role1
                </label>
                <input type="hidden" asp-for="@Model.roleSelections[i].role.Id" />
                <input type="hidden" asp-for="@Model.roleSelections[i].role.Role1" />
                <input type="checkbox" asp-for="@Model.roleSelections[i].Selected" />
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
